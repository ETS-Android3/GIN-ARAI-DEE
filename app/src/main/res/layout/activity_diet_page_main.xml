<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ghost_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:text="@string/dietary_planner"
        android:textAlignment="center"
        android:textColor="@color/wine"
        android:textSize="36sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="15dp">

                <!-- Monday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/monday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="0"
                    android:layout_column="0"/>

                <Button
                    android:id="@+id/monday_edit"
                    android:layout_height="30dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Tuesday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/tuesday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/tuesday_edit"
                    android:layout_height="30dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Wednesday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/wednesday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/wednesday_edit"
                    android:layout_height="30dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Thursday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/thursday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="3"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/thusday_edit"
                    android:layout_height="30dp"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Friday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/friday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="4"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/friday_edit"
                    android:layout_height="30dp"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Saturday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/saturday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="5"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/saturday_edit"
                    android:layout_height="30dp"
                    android:layout_row="5"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />

                <!-- Sunday -->
                <TextView
                    android:layout_height="75dp"
                    android:text="@string/sunday"
                    android:textColor="@color/wine"
                    android:textSize="25sp"
                    android:layout_row="6"
                    android:layout_column="0"/>
                <Button
                    android:id="@+id/sunday_edit"
                    android:layout_height="30dp"
                    android:layout_row="6"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:background="@drawable/diet_check_button"
                    android:text="@string/edit"
                    android:textColor="@color/wine"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />


            </GridLayout>
    </ScrollView>

</LinearLayout>